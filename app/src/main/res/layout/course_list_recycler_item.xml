<?xml version="1.0" encoding="UTF-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">


<data class="CourseBinding"
    >

<variable name="model"
    type="com.parsclass.android.alltolearn.model.Course" />


</data>

<!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="@dimen/placeholderHeightImage"--><!--android:paddingBottom="5dp"--><!--android:layout_marginTop="5dp"--><!--android:layout_marginBottom="5dp" >-->


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="5dp"
    >

    <ImageView
        android:id="@+id/imgCourse"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_category_businnes" />



    <TextView
        android:id="@+id/txtTitleCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imgCourse"
        android:text="عنوان دوره" />

    <!--android:text="عنوان دوره عنوان دوره" />-->


    <!--android:text="@{courseItem.title}" />-->


    <TextView
        android:id="@+id/txtInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitleCourse"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imgCourse"
        android:text="علیرضا عزیزی" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInstructor"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imgCourse"
        android:rating="2"
        android:theme="@style/RatingBar" />

    <!--android:rating="@{courseItem.ratingAvg}"-->


    <TextView
        android:id="@+id/txtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInstructor"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/ratingBar"
        android:text="(34,555)" />

    <!--android:text='@{`( ` + courseItem.numberPersonRate + " )"}' />-->


    <!--android:text="@{courseItem.instructorName}" />-->


    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imgCourse"
        android:text="۲۳۰۰۰" />

    <!--android:text="@{String.valueOf(courseItem.price)}" />-->


</RelativeLayout>

    <!--</android.support.v7.widget.CardView>-->

    </layout>