<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_marginTop="10dp"
        >
        <!--android:layout_margin="10dp"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <TextView
            android:id="@+id/txtNameInstructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="علیرضا عزیزی"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgInstructor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/txtNameInstructor"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/img_instructor"/>
        <TextView
            android:id="@+id/txtNumberStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNameInstructor"
            android:layout_toEndOf="@+id/imgInstructor"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="234,12 دانش آموز"
            android:drawableStart="@drawable/ic_student"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/txtNumberCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNumberStudent"
            android:layout_toEndOf="@+id/imgInstructor"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="12 دوره"
            android:drawableStart="@drawable/ic_course"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/txtAvgRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNumberCourse"
            android:layout_toEndOf="@+id/imgInstructor"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="میانگین امتیاز ۴.۵"
            android:drawableStart="@drawable/ic_star_instructor"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/txtViewProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAvgRate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/label_see_instructor_profile"
            android:textSize="16sp"
            android:textColor="@color/colorMarjani"
            android:paddingBottom="@dimen/padding_10"
            />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>